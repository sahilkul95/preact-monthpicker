.month-year-picker {
  padding: 5px 0;
  user-select: none;

  .caption {
    padding-right: 10px;
  }

  .arrow-icon {
    font-size: 1.2rem;
    vertical-align: middle;
  }

  .year-picker {
    display: inline-block;

    span {
      font-size: 16px;
      color: #5186ed;
      text-align: center;
      padding: 0 16px;
    }

    .disabled {
      cursor: not-allowed;
      opacity: 0.3;
    }

    .controls {
      position: absolute;
      right: 0;
      width: 80px;
      top: 0;
      height: 100%;
      display: flex;

      .fa {
        margin: auto;
        cursor: pointer;
        font-size: 25px;

        &.disabled {
          cursor: default;
          opacity: 0.3;
        }
      }
    }
  }

  .month-picker {
    display: inline-block;

    > div {

      > div {
        background-color: #ddd;
        color: #000;
        margin: 3px;
        width: 30px;
        display: inline-flex;
        cursor: pointer;

        &.selected {
          background-color: #5186ed;
          color: #FFFFFF;
          padding: 2px;
        }

        span {
          margin: auto;
          font-size: 12px;
          font-style: normal;
        }
      }

    }
  }
}

.caption {
  padding-right: 10px;
}

.arrow-icon {
  font-size: 1.2rem;
  vertical-align: middle;
}

.default {
  cursor: default;
}

.disabled {
  cursor: not-allowed;
  opacity: 0.3;
}
